{
  "name": "bitapps/doc",
  "description": "SMTP Configuration plugin by Bit Apps",
  "license": "gpl-2",
  "autoload": {
    "psr-4": {
      "BitApps\\SMTP\\": "./backend/app",
      "BitApps\\SMTP\\Tools\\ComposerScripts\\": "./tools/composer-scripts/"
    }
  },
  "scripts": {
    "lint": "./vendor/bin/php-cs-fixer fix --config=.php-cs-fixer.php",
    "unused:variable": "phpcs -p --standard=VariableAnalysis backend",
    "compat": "./vendor/bin/phpcs -p ./backend --standard=PHPCompatibilityWP --runtime-set testVersion 5.6-",
    "test:unit": "./vendor/bin/phpunit --testdox --colors=always tests/ --exclude-group db",
    "strauss": [
      "vendor/bin/strauss"
    ],
    "pre-install-cmd": [
      "BitApps\\SMTP\\Tools\\ComposerScripts\\NamespaceUpdater::preInstall"
    ],
    "pre-update-cmd": [
      "BitApps\\SMTP\\Tools\\ComposerScripts\\NamespaceUpdater::preUpdate"
    ],
    "post-install-cmd": [
      "BitApps\\SMTP\\Tools\\ComposerScripts\\NamespaceUpdater::postInstall"
    ],
    "post-update-cmd": [
      "BitApps\\SMTP\\Tools\\ComposerScripts\\NamespaceUpdater::postUpdate"
    ]
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^3.10",
    "sirbrillig/phpcs-variable-analysis": "*",
    "dealerdirect/phpcodesniffer-composer-installer": "^0.7",
    "phpunit/phpunit": "^9.3.0",
    "yoast/phpunit-polyfills": "^1.0",
    "phpcompatibility/phpcompatibility-wp": "*",
    "brianhenryie/strauss": "^0.14.1"
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  },
  "require": {
    "bitapps/wp-validator": "dev-mazed-dev",
    "bitapps/wp-kit": "dev-main",
    "bitapps/wp-database": "dev-main"
  },
  "extra": {
    "strauss": {
      "target_directory": "dependencies",
      "namespace_prefix": "BitApps\\SMTP\\Dependencies\\",
      "classmap_prefix": "SMTP_",
      "constant_prefix": "SMTP_",
      "include_author": false,
      "classmap_output": false,
      "delete_vendor_packages": true,
      "delete_vendor_files": true,
      "copy_static_files": [],
      "delete_static_files": []
    }
  }
}